-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @ratings.include?(rating)
  = hidden_field_tag 'sort', @sort	if @sort
  = submit_tag 'Refresh', :id => 'rating_submit'

%table#movies
  %thead
    %tr
      %th{:class => ("hilite" if @sort == 'title')}= link_to 'Movie Title', movies_path(:sort =>'title', :ratings => params[:ratings]), :id => 'title_header'
      %th Rating
      %th{:class => ("hilite" if @sort == 'release_date')}= link_to 'Release Date', movies_path(:sort =>'release_date', :ratings => params[:ratings]), :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
